@using System.Security.Claims
@{ 
    string roleCode = string.Empty;
    string fullName = string.Empty;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ICHI SKILL</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->

    <link href="~/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/adminlte.css" rel="stylesheet" />
    <link href="~/css/template.min.css" rel="stylesheet" />
    <style>
        .child-icon {
            font-size: 10pt !important;
            margin-left: 10px;
        }

        .dataTables_processing {
            background: #ffc107;
        }

        #popup-overlay {
            position: fixed;
            background-color: rgba(0, 0, 0, 0.685);
            width: 100%;
            height: 95vh;
            top: 0;
            left: 0;
            z-index: 9998;
            display: block;
            overflow-y: hidden;
            overflow-x: hidden;
            display: none;
        }

        #content-wating {
            margin-top: 20%;
        }
    </style>
    @RenderSection("styles", required: false)

</head>
<body class="hold-transition sidebar-mini skin-yellow text-sm">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-yellow">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link text-dark">HỆ THỐNG QUẢN LÝ NGHIỆP VỤ DỰ TOÁN/THANH TOÁN</a>
                </li>
            </ul>
            <!-- SEARCH FORM -->
           
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
              
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">

                    @{

                        if (User.Identity.IsAuthenticated)
                        {
                            roleCode = User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value;
                            fullName = User.Claims.FirstOrDefault(x => x.Type == "FullName").Value;

                        }
                    }

                    <a class="nav-link text-dark" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>&nbsp;@(fullName)
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right text-dark">
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i> @(User.Identity.Name)
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-users mr-2"></i> @(roleCode)
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/account/ChangePassword/@(User.Identity.Name)" class="dropdown-item">
                            <i class="fas fa-lock mr-2"></i>Đổi mật khẩu
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/account/logout" class="dropdown-item">
                            <i class="fa fa-level-down"></i>Đăng xuất hệ thống
                        </a>

                    </div>
                </li>

                <li class="nav-item" style="display:none;">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>

                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="https://ichi.gamanjsc.com/home/index" class="brand-link" style="background:#e08e0b;">
                <span style="font-weight:bold;">CDC</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar ">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            @(await Component.InvokeAsync("ListMenuNavigationByRole", new { roleCode = roleCode }))
                        }
                    }

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
            <!-- Content Header (Page header) -->
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Phiên bản</b> 3.1.0
        </div>
        <strong></strong>.
    </footer>
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <div id="popup-overlay">
        <div class="text-center" id="content-wating">
            <div class="spinner-border text-warning" role="status" style="width: 3rem; height: 3rem;">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>

    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.js"></script>

    <script src="~/js/adminlte.js"></script>
    <script src="~/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/plugins/bootstrap3-typehead/bootstrap3-typeahead.js"></script>
    <script src="~/app-script/helper.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
