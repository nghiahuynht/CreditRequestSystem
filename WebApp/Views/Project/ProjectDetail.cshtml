                            <td>2024-2025</td>
                            <td>450,000,000</td>
                            <th><span class='badge badge-primary badge-status'>Đang hiệu lực</span></th>
                            <td>Năm 2025: 50.000.000</td>
                            <td>Admin</td>
                            <td>13/11/2024</td>
                        </tr>
                    </table>
                </div>
            </div>


        </div>
    </div>
</section>


<div class="modal fade show" data-backdrop="static" id="modal-project-itemline" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="promotion-title">Thông tin hạng mục phân bổ chi tiết</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <label class="col-md-3 control-label">Nhóm hoạt động *</label>
                        <div class="col-md-3">
                            <select class="form-control">
                                <option></option>
                                <option>Nhóm tập huấn</option>
                                <option>Mua sắm chuyên môn</option>
                            </select>
                        </div>

                        <label class="col-md-3 control-label">Mục chi</label>
                        <div class="col-md-3">
                            <select class="form-control">
                                <option></option>
                                <option>Báo cáo viên</option>
                                <option>Băng rôn</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <label class="col-md-3 control-label">Tiêu chuẩn</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" />
                        </div>

                        <label class="col-md-3 control-label">Số lượng</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <label class="col-md-3 control-label">Đơn giá</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" />
                        </div>

                        <label class="col-md-3 control-label">Thành tiền</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <label class="col-md-3 control-label">Ghi chú</label>
                        <div class="col-md-9">
                            <textarea class="form-control" rows="3">
    
                            </textarea>
                        </div>

       
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="btn-save-promotion">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


@section scripts{
    <script>
        $(document).ready(function ()
        {
            $("#btn-add-project-item").click(function () {
                $("#modal-project-itemline").modal();
            });

        });

    </script>
 }