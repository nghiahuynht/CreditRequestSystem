                        <thead>
                            <tr>
                                <th>Id</th>
                                <th width="100px">Tên đăng nhập</th>
                                <th width="200px">Họ và tên</th>
                                <th>SĐT</th>
                                <th>Email</th>
                                <th width="150px">Phân quyền</th>
                                <th width="150px">Chức danh/chức vụ</th>
                                <th width="100px">Hoạt động</th>
